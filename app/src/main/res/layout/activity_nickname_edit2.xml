<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".test.NicknameEditActivity2">

    <TextView
        android:id="@+id/newNicknameTxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="새 닉네임"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/newNicknameEdt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="사용할 새로운 닉네임"
        android:singleLine="true"
        app:layout_constraintTop_toBottomOf="@id/newNicknameTxt2"/>

    <Button
        android:id="@+id/okBtn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="입력 완료"
        app:layout_constraintTop_toBottomOf="@id/newNicknameEdt2"/>

</androidx.constraintlayout.widget.ConstraintLayout>